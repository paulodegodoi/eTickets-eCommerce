@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "Lista de Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th class="text-certer">@Html.DisplayNameFor(model => model.Logo)</th>
                    <th class="text-certer">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="text-certer">@Html.DisplayNameFor(model => model.Description)</th>
                    <th class="text-certer">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="text-center">
                            <img 
                                class="rounded-circle" 
                                src="@item.Logo" 
                                alt="@item.Name" 
                                style="max-width: 150px"
                            />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Description)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square"></i>Editar
                            </a>
                            <a class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
